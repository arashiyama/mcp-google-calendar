{
  "name": "mcp-google-calendar",
  "version": "1.0.0",
  "description": "MCP server for Google Calendar access",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "db:reset": "rm -f .token-store.db && node -e \"require('./db').initDatabase().then(() => console.log('Database reset successfully')).catch(err => console.error('Error resetting database:', err))\""
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "googleapis": "^128.0.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "app.js",
      "db.js"
    ],
    "coverageReporters": [
      "text",
      "html"
    ]
  }
}
